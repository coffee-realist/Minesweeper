<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>


<GridPane fx:id="game_grid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.example.java2lab5.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <AnchorPane fx:id="game_window" prefHeight="600.0" prefWidth="800.0">
        <Button fx:id="button_exit" layoutX="400.0" layoutY="320.0" mnemonicParsing="false" onAction="#exit"
                prefHeight="40.0" prefWidth="90.0" text="Выход">
            <font>
                <Font name="Verdana Bold" size="16.0"/>
            </font>
        </Button>
        <TextField fx:id="field_mines" layoutX="385.0" layoutY="275.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="0 &lt; число &lt; количество ячеек">
            <font>
                <Font name="Verdana" size="11.0"/>
            </font>
        </TextField>
        <TextField fx:id="field_width" layoutX="385.0" layoutY="236.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="1 &lt; число &lt; 41">
            <font>
                <Font name="Verdana" size="11.0"/>
            </font>
        </TextField>
        <TextField fx:id="field_height" layoutX="385.0" layoutY="194.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="1 &lt; число &lt; 31">
            <font>
                <Font name="Verdana" size="11.0"/>
            </font>
        </TextField>
        <Label layoutX="340.0" layoutY="71.0" text="Сапёр">
            <font>
                <Font name="Verdana Bold" size="32.0"/>
            </font>
        </Label>
        <Label layoutX="260.0" layoutY="199.0" text="Высота поля">
            <font>
                <Font name="Verdana" size="12.0"/>
            </font>
        </Label>
        <Label layoutX="320.0" layoutY="150.0" text="Параметры поля">
            <font>
                <Font name="Verdana Bold" size="16.0"/>
            </font>
        </Label>
        <Label layoutX="260.0" layoutY="241.0" text="Ширина поля">
            <font>
                <Font name="Verdana" size="12.0"/>
            </font>
        </Label>
        <Label layoutX="260.0" layoutY="280.0" text="Количество мин">
            <font>
                <Font name="Verdana" size="12.0"/>
            </font>
        </Label>
        <Button fx:id="button_start" layoutX="300.0" layoutY="320.0" mnemonicParsing="false" onAction="#launch"
                prefHeight="40.0" prefWidth="90.0" text="Начать">
            <font>
                <Font name="Verdana Bold" size="16.0"/>
            </font>
        </Button>
    </AnchorPane>
</GridPane>
